<h1>Edit Address</h1>

<% if @address.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/addresses/<%= @address.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="address_address">Address</label>
  <input id="address_address" name="address" type="text" value="<%= @address.address %>">
  <label for="address_label"> Label </label>
  <input id="address_label" name="label" type="text" value="<%= @address.label %>">
  <input id="address_contact_id" name="contact_id" type="hidden" value="<% @address.contact_id %>">
  <button>Update Address</button>
</form>
